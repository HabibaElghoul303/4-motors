int forward(int a ,int b ,int c ,int d)
{
  digitalWrite(a,HIGH);
  digitalWrite(b,LOW);
  digitalWrite(c,HIGH);
  digitalWrite(d,LOW);
}
int backward(int a , int b ,int c ,int d)
{
   digitalWrite(a,LOW);
   digitalWrite(b,HIGH);
   digitalWrite(c,LOW);
  digitalWrite(d,HIGH);
}  
  int mPin1 = 12;
  int mPin2 = 11;
  int mPin3 = 10;
  int mPin4 = 8;

  

void setup() {
  pinMode(mPin1,OUTPUT);
  pinMode(mPin2,OUTPUT);
  pinMode(mPin3,OUTPUT);
  pinMode(mPin4,OUTPUT);


}

void loop() {
  forward(mPin1,mPin2,mPin3,mPin4);

}
